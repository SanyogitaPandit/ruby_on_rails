<!DOCTYPE html>
<html>
  <head>
    <title>Facebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>  
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <%end%>
    <% if flash[:alert]%>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <%end%>

    <div class="topnav">            
      <% if user_signed_in? %>
        <a><%= gravatar_image_tag(current_user.email, alt: current_user.name, :gravatar => { :size => 32 }) %></a>        
        <a><%= gravatar_image_tag(current_user.email, alt: current_user.name, :gravatar => { :size => 32 }) %></a>
        <a><%= link_to current_user.name, edit_user_registration_path, class:"button is-info" %></a>
        <a><%= link_to "Log Out ", destroy_user_session_path, method: :delete, class:"button is-info" %></a>
      <% else %>
        <a>facebook</a>
        <a><%= render "devise/sessions/login" %></a>
      <% end %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
