<%= form_for @event do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Date %><br />
    <%= f.datetime_select :dnt, {start_year: Time.current.year, default: Time.now, use_short_month: true} %>
  </div>

  <div class="field">
    <%= f.label :Address %><br />
    <%= f.text_field :addr %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
